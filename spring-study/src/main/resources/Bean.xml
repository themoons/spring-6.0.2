<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="user" class="org.springframework.entity.User">
		<property name="name" value="lemon guo"/>
	</bean>

	<bean id="dog" class="org.springframework.entity.Dog">
		<property name="color" value="yellow"/>
		<property name="age" value="13"/>
	</bean>

	<bean id="teddyDog" class="org.springframework.entity.TeddyDog" parent="dog">
		<property name="name" value="13"/>
	</bean>
</beans>